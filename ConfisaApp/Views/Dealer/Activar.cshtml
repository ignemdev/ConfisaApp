@model ConfisaApp.Models.DealerViewModel

@{
    ViewData["Title"] = "Activar";
}

<h1>Activar</h1>

<h4>Dealer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Activar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Dealer.Id" />
            <div class="form-group">
                <label asp-for="Dealer.OficialId" class="control-label"></label>
                @Html.DropDownListFor(a => a.Dealer.OficialId, Model.Oficiales, htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="Dealer.OficialId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
